<% include partials/header %>

<div class="row text-center">
        <% for(var i = 0 ; i<100 ; i++){ %>
            <% if(response.articles[i] != undefined) { %>
                <div class="mystyle">
                <div class= "img-fluid img-thumbnail">
                    <img class="img-thumbnail" src="<%=response.articles[i].urlToImage%>">
                
                    <div class = "caption">
                        <h4><%= response.articles[i].title %> </h4>
                    </div>
                    <a href="/news/<%=search%>/<%=i%>" class="btn btn-primary">More info</a>
                    
                </div>
                <hr>
            </div>
            
            <% } %>
            
        <% } %>
    </div>
    
    <div class="container pagin">
    <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="/news/<%=search%>/2">2</a></li>
    <li class="page-item"><a class="page-link" href="/news/<%=search%>/3">3</a></li>
    <li class="page-item"><a class="page-link" href="/news/<%=search%>/4">4</a></li>
    <li class="page-item"><a class="page-link" href="/news/<%=search%>/5">5</a></li>
  </ul>
  </div>
   
<% include partials/footer %>